package exercicio02;

import java.util.Scanner;

//  Faça um programa que: 
//- Leia a cotação do dólar 
//- Leia um valor em dólares 
//- Converta esse valor para Real 
//- Mostre o resultado

public class exercicio02 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Informe a cotação do Dólar :");
		double cotDol = sc.nextDouble();
		System.out.println("Informe a quantidade de Dólar: ");
		double qntDol = sc.nextDouble();
		
		System.out.println("=== Valor convertido em Real R$ ===");
		double convert = qntDol * cotDol;
		System.out.println("Valor total R$ "+ String.format("%.2f", convert));
		
		sc.close();
	}

}
